    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debugging index.ts with tsNode",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["-r", "ts-node/register/transpile-only"],
            "args": ["src/index.ts"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "program": "${workspaceRoot}/src/index.ts",
            // "outFiles": [
            //     "${workspaceFolder}/**/*.js"
            // ]
        }
    ]
}